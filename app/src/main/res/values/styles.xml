<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- LỖI ĐÃ ĐƯỢC KHẮC PHỤC: Sử dụng parent để kế thừa thuộc tính Material Components -->
    <style name="CircleImageView" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedImage" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="Toolbar.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="IndicatorDotActive">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:background">@drawable/indicator_dot_active</item>
    </style>

    <style name="IndicatorDotInactive">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:background">@drawable/indicator_dot_inactive</item>
    </style>

    <!-- Styles cho Header ngày trong tuần (CN, T2,...) -->
    <style name="CalendarDayHeader" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <!-- Styles cho các ô ngày có số -->
    <style name="CalendarDayCell" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Styles cho các ô ngày trống (để giữ bố cục) -->
    <style name="CalendarDayCellEmpty" parent="CalendarDayCell">
        <item name="android:text"></item>
    </style>

</resources>
