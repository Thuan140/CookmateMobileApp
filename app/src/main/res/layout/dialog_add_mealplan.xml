<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Meal plan name"
            android:inputType="textCapSentences"
            android:maxLines="2"/>

        <!-- Thay thế EditText @+id/etRecipeIds bằng đoạn sau -->
        <Button
            android:id="@+id/btnSelectRecipes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select recipes from favorites"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvSelectedRecipes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No recipes selected"
            android:layout_marginTop="6dp"
            android:textSize="14sp"/>


        <EditText
            android:id="@+id/etNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Notes (optional)"
            android:inputType="textMultiLine"
            android:layout_marginTop="8dp"/>


    </LinearLayout>
</ScrollView>
