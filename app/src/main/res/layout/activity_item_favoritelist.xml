<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_margin="8dp"
    android:background="@drawable/item_background_rounded">

    <!-- Ảnh món ăn -->
    <ImageView
        android:id="@+id/recipe_image"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/food"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Tiêu đề món ăn -->
    <TextView
        android:id="@+id/recipe_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="40dp"
        android:text="Meal 1"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/recipe_image"
        app:layout_constraintTop_toTopOf="@id/recipe_image"
        tools:text="Meal 1" />

    <!-- Mô tả -->

    <!-- Nút xóa khỏi yêu thích -->

    <TextView
        android:id="@+id/recipe_description"
        android:layout_width="226dp"
        android:layout_height="23dp"
        android:layout_marginTop="4dp"
        android:text="Description"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_remove_favorite"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/recipe_title"
        app:layout_constraintTop_toBottomOf="@id/recipe_title"
        tools:text="Description" />

    <ImageButton
        android:id="@+id/btn_remove_favorite"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_heart_filled"
        tools:layout_editor_absoluteX="339dp"
        tools:layout_editor_absoluteY="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
