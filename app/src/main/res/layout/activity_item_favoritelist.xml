<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/item_background_rounded"
    android:padding="16dp">

    <!-- Ảnh món ăn -->
    <ImageView
        android:id="@+id/recipe_image"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/food"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Tiêu đề món ăn -->
    <TextView
        android:id="@+id/recipe_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="40dp"
        android:text="Meal 1"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/recipe_image"
        app:layout_constraintTop_toTopOf="@id/recipe_image"
        tools:text="Meal 1" />

    <TextView
        android:id="@+id/recipe_ready_in"
        android:layout_width="130dp"
        android:layout_height="22dp"
        android:layout_marginTop="4dp"
        android:text="Ready In:50mins"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_remove_favorite"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/recipe_title"
        app:layout_constraintTop_toBottomOf="@id/recipe_title" />

    <TextView
        android:id="@+id/recipe_serves"
        android:layout_width="67dp"
        android:layout_height="22dp"
        android:layout_marginTop="4dp"
        android:text="Serves:4"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_remove_favorite"
        app:layout_constraintHorizontal_bias="0.909"
        app:layout_constraintStart_toStartOf="@id/recipe_title"
        app:layout_constraintTop_toBottomOf="@id/recipe_title" />

    <!-- Nút xóa khỏi yêu thích -->

    <ImageButton
        android:id="@+id/btn_remove_favorite"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:contentDescription="Remove favorite"
        android:focusable="true"
        android:src="@drawable/ic_heart_filled"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
